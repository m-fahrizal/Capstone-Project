<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ApplyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/apply_kip"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/nik"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edNIK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputNIK"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/nisn"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edNISN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputNISN"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/npsn"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edNPSN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputNPSN"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/fullname"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edfullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputFullname"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/gender"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputGender"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/tempatLahir"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edTempatLahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputTempatLahir"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/tglLahir"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edTglLahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputTglLahir"
            android:inputType="date"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/mom"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edMom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputMom"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/address"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputAddress"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/posCode"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edPosCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputPosCode"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/religion"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edReligion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputReligion"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/salary"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputSalary"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/asal_sekolah"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputCollege"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/status_sekolah"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edSchoolStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputSchoolStatus"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/prestasi"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rgPrestasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/havePrestasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/noPrestasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/nilai_ujian"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edNilai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:autofillHints=""
            android:background="@drawable/bg_input"
            android:fontFamily="@font/opensansreguler"
            android:hint="@string/inputNilai"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/status_kip"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rgStatusKip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/haveKip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/noKip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/status_rumah"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rgStatusRumah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/sendiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sewa" />

            <RadioButton
                android:id="@+id/sewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sendiri" />

            <RadioButton
                android:id="@+id/numpang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numpang" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/fotoRumah"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.example.capstoneproject.ui.custom.PhotoButton
            android:id="@+id/select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:text="@string/upload_file"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/previewImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/ic_place_holder" />

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/opensansextrabold"
            android:text="@string/apply"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>